<style>
  .small-box {
    position: relative;
    text-align: center;
    width: 50px;
    height: 50px;
    line-height: 50px;
    font-size: 24px;
    margin: 0;
    padding: 0;
    float: left;
    border: 1px solid #ccc;
    overflow: hidden;
  }
  .cat{
    position: absolute;
    width: 100%;
    transition: all 0.8s ease-out;
  }
  .lettre{
    top:0%;
  }
  .number{
    top:100%;
  }
  .small-box.active .lettre {
    top: -100%;
  }

  .small-box.active .number {
    top: 0;
  }
</style>
