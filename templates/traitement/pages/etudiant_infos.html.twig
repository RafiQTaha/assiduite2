<div class="col-md-12" style="">
    <fieldset>
        <div class="col-md-12 row" style="margin:0">
            <div class="col-md-4">
                <div class="form-group">
                    <label>Séance  :</label>
                    <input type="text" class="form-control" name="seance" id="seance" readonly value="{{xabs["id_séance"]}}" />
                </div>
            </div> 
            <div class="col-md-4">
                <div class="form-group">
                    <label>Admission  :</label>
                    <input type="text" class="form-control" name="admission" id="admission" readonly value="{{xabs["id_admission"]}}" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>Nom et prénom  :</label>
                    <input type="text" class="form-control" name="name" id="name" readonly value="{{xabs["nom"]}} {{xabs["prénom"]}} " />
                </div>
            </div>
        </div>
        <div class="col-md-12 row" style="margin:0">
            <div class="col-md-4">
                <div class="form-group">
                    <label>Catégorie :</label>
                    <input type="text" class="form-control" name="categorie" id="categorie" readonly value="{{ xabs["categorie_f"] }}" />
                </div>
            </div> 
            <div class="col-md-4">
                <div class="form-group">
                    <label>Catégorie enseignant  :</label>
                    <select class="form-control " style="width: 100%" name="cat_Ens" id='cat_Ens'>
                        <option value="" selected>Choix de categorie</option>
                        <option value="PEE" {% if xabs["categorie_enseig"] == 'PEE' %}selected{% endif %}>PEE</option>
                        <option value="AD" {% if xabs["categorie_enseig"] == 'AD' %}selected{% endif %}>AD</option>
                        <option value="BD" {% if xabs["categorie_enseig"] == 'BD' %}selected{% endif %}>BD</option>
                        <option value="S" {% if xabs["categorie_enseig"] == 'v' %}selected{% endif %}>S</option>
                        <option value="Z" {% if xabs["categorie_enseig"] == 'Z' %}selected{% endif %}>Z</option>
                    </select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>Heur pointage  :</label>
                    <input type="text" class="form-control" name="categorie" id="categorie" readonly value="{{ xabs["heure_pointage"] | date('H:i') }}" />
                </div>
            </div>
        </div>
        <div class="col-md-12 row" style="margin:0">
            <div class="col-md-4">
                <div class="form-group">
                    <label>Observation :</label>
                    {# <textarea type="text" class="form-control" name="observation" id="observation" value=""> <textarea/> #}
                    <textarea class="form-control" name="observation" id="observation"></textarea>
                </div>
            </div> 
        </div>
        
    </fieldset>
</div>
<button type="submit" class="btn btn-primary mb-4 float-right mr-5" ><i class="fas fa-check"></i> Enregister</button>
