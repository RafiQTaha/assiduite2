{% extends 'base.html.twig' %} 
{% block title %}Univ - Pointeuse{% endblock %} 
{% block body %}

<div class="main-content">
  <section class="section">
    <div class="section-header">
      <h1>Seances</h1>
      <div class="section-header-breadcrumb">
        <a href="#" class="btn btn-primary ml-1" id="attendance"><i class="fas fa-fingerprint"></i> Attendance</a>
        {# {% for operation in operations %}
        <a href="{{ operation.link }}" class="{{ operation.classTag }}" id="{{ operation.idTag }}"><i
            class="{{ operation.icon }}"></i> {{ operation.designation }}</a>
        {% endfor %} #}
      </div>
    </div>

    <div class="section-body">
      <div class="card">
        <div class="card-header">
          <h4>Tableau des Seances</h4>
        </div>
        <div class="card-body">
          <div class="card-search" style="margin-bottom: 1.5rem">
            <div class="row">
            
              <div class="col-md-1" style="padding-right: 5px !important;padding-left: 5px !important;">
                <label for="salles">Salles:</label>
                <select class="form-control" name="salles" id="salles">
                  <option value="">Choix salle</option>
                  {% for salle in salles %}
                  <option value="{{ salle.id }}">
                    {{ salle.designation }}
                  </option>
                  {% endfor %}
                </select>
              </div>

              <div class="col-md-2" style="padding-right: 5px !important;padding-left: 5px !important;">
                <label for="date_debut">Date Debut:</label>
                <input type="date" class="form-control" name="date_debut" id="date_debut"/>
              </div>
              <div class="col-md-2" style="padding-right: 5px !important;padding-left: 5px !important;">
                <label for="date_fin">Date Fin:</label>
                <input type="date" class="form-control" name="date_fin" id="date_fin"/>
              </div>
          </div>
          <div class="two_table w-100 d-flex">
            <div class="w-50">
              <table id="datatables_gestion_salles" class="table table-striped" style="width: 100%">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>C-Salle</th>
                    <th>Salle</th>
                    <th>SN</th>
                    <th>IP</th>
                  </tr>
                </thead>
                <tbody></tbody>
                <tfoot>
                  <tr>
                    <th>#</th>
                    <th>C-Salle</th>
                    <th>Salle</th>
                    <th>SN</th>
                    <th>IP</th>
                  </tr>
                </tfoot>
              </table>
            </div>
            <!-- /////////////////////// -->
            <div class="w-50 seconde_table">

            </div>

          </div>
        </div>
      </div>
    </div>
  </section>
</div>

